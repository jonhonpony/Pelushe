@using TerlikEntities;
@using Terlik_yeni.Models;
@using TerlikBll;
@model List<TerlikEntities.Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center">
         
        </div>
        <br />
        <br />
        <br />
        <br />

        <div class="col-lg-9">
            <div class="row">
                @{
                    var directoryPath = Server.MapPath("~/img/resim/men/SeaShoes/");
                    var fileCount = Directory.GetFiles(directoryPath, "*.jpg").Length;

                    for (int i = 1; i <= fileCount; i++)
                    {
                        string imagePath = $"../img/resim/woman/SeaShoes/men{i}.jpg";
                        <div class="col-md-4">
                            <div class="card mb-4 product-wap rounded-0">
                                <div class="card rounded-0">
                                    <img class="card-img rounded-0 img-fluid product-image" src="@imagePath">
                                    <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                        <ul class="list-unstyled">
                                            <li><button class="btn btn-success text-white mt-2 view-button"><i class="far fa-eye"></i></button></li>
                                        </ul>
                                    </div>
                                </div>


                            </div>
                        </div>
                    }
                }
            </div>
        </div>



    </div>
</div>

<!-- Modal -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="modal.css">
    <title>Image Modal</title>
</head>


<body>




    <!-- Modal Container -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <!-- Fix: Change "MContent" to "modal-content" -->
                <div class="modal-body">
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <img id="modalImage" src="your-image.jpg" class="img-fluid" alt="Product Image">
                </div>
            </div>
        </div>
    </div>

    <!-- Your HTML code for the "view" button -->

    <script>
        document.querySelectorAll('.view-button').forEach(button => {
            button.addEventListener('click', function (event) {
                // Get the product image
                const productImage = this.closest('.card').querySelector('.product-image').src;

                // Set the modal image
                document.querySelector('#modalImage').src = productImage;

                // Show the modal
                new bootstrap.Modal(document.querySelector('#imageModal')).show();
            });
        });
    </script>






